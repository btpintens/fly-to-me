<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fly To Me</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <% if (user) { %>
      <h1>Welcome, <%= user.username %>!</h1>
      <div class="divider"></div>

      <% events.forEach(event => { %>
        <div class="boarding-pass">
          <h2><%= event.name %></h2>
          <div class="divider"></div>
          <div class="info-line">
            <span><strong>Date:</strong> <%= event.startDate.toLocaleDateString("en-US") %></span>
            <span><strong>Guests:</strong> <%= event.guests.length %></span>
          </div>
          <div class="info-line">
            <span><strong>Location:</strong> TBD</span>
            <span><a href="/events/<%= event._id %>" class="button">View</a></span>
          </div>
        </div>
      <% }) %>

      <div class="center-button">
        <a href="/events/create" class="button">Create New Event</a>
        
      </div>
    <% } else { %>
      <h1>Fly To Me</h1>
      <p><a href="/auth/sign-up" class="button">Sign up</a> or <a href="/auth/log-in" class="button">Log in</a></p>
    <% } %>
  </div>
  <div class="footer">
    Thank you for traveling with <strong>Fly To Me</strong> ✨<br>
    © <%= new Date().getFullYear() %> Your Name or Team Name
  </div>


</body>
</html>



